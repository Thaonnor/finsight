{
    "$schema": "https://schema.tauri.app/config/2.0.0",
    "productName": "finsight",
    "version": "0.1.0",
    "identifier": "com.finsight.app",
    "build": {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173"
    },
    "app": {
        "windows": [
            {
                "title": "finsight",
                "width": 1440,
                "height": 900,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "icon": [
            "icons/icon.ico"
        ],
        "shortDescription": "A personal finance tracking application."
    }
}